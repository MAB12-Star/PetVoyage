<% layout('layouts/boilerplate') %>

<div class="container py-4">
  <h1 class="fw-bold mb-2">Site Map</h1>
  <p class="text-muted mb-4">
    This page is auto-generated from the same source as <a href="/sitemap.xml">/sitemap.xml</a>.
  </p>

  <div class="row g-4">
    <!-- Countries -->
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="h5 fw-bold mb-3">Country regulations</h2>

          <% countries.forEach(c => { %>
            <div class="mb-3">
              <div class="fw-semibold"><%= c.country %></div>
              <div class="d-flex flex-wrap gap-2 mt-2">
                <% c.links.forEach(p => { %>
                  <a class="btn btn-sm btn-outline-secondary" href="<%= p.url %>">
                    <%= p.label %>
                  </a>
                <% }) %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- Airlines -->
    <div class="col-12 col-lg-6">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h2 class="h5 fw-bold mb-3">Airline policies</h2>
          <div class="row">
            <% airlines.forEach(a => { %>
              <div class="col-12 col-md-6">
                <a class="d-block py-1" href="<%= a.loc %>"><%= a.name %></a>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Blog -->
    <div class="col-12 col-lg-6">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h2 class="h5 fw-bold mb-3">Blog</h2>
          <% stories.slice(0, 50).forEach(s => { %>
            <a class="d-block py-1" href="<%= s.loc %>"><%= s.title || s.loc %></a>
          <% }) %>

          <% if (stories.length > 50) { %>
            <div class="text-muted small mt-2">Showing latest 50 posts.</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
