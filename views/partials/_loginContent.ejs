<div class="text-center">
  <img
    src="/images/PetVoyageLogo.png"
    class="img-fluid rounded-top d-block mx-auto"
    alt="PetVoyage Logo"
    width="400"
  />

  <h2 class="mt-3 mb-3">Log in to PetVoyage</h2>

  <!-- FLASH MESSAGES (if you render them here) -->
  <% if (typeof messages !== 'undefined' && messages.error && messages.error.length) { %>
    <div class="alert alert-danger">
      <%= messages.error[0] %>
    </div>
  <% } %>

  <!-- LOCAL LOGIN FORM -->
  <form action="/auth/login" method="POST" class="text-start mt-3">
    <div class="mb-3">
      <label for="loginEmail" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        id="loginEmail"
        name="email"
        required
        autocomplete="email">
    </div>

    <div class="mb-3">
      <label for="loginPassword" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="loginPassword"
        name="password"
        required
        autocomplete="current-password">
    </div>

    <button type="submit" class="btn btn-primary w-100">
      Log in
    </button>
  </form>

  <div class="my-3">
    <span class="text-muted">or</span>
  </div>

  <!-- SOCIAL LOGIN BUTTONS -->
  <a href="/auth/google"
     class="btn btn-outline-danger btn-lg d-flex align-items-center justify-content-center mt-2">
    <i class="fab fa-google me-2"></i>
    Continue with Google
  </a>

  <a href="/auth/facebook"
     class="btn btn-outline-primary btn-lg d-flex align-items-center justify-content-center mt-3">
    <i class="fab fa-facebook-f me-2"></i>
    Continue with Facebook
  </a>

  <hr class="mt-4">

  <p class="mb-0">
    Donâ€™t have an account?
    <a href="/auth/register">Sign up</a>
  </p>
</div>
