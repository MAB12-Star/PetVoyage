<%
/*
Supports:
- image ads
- html ads
- script / product ads

Input:
  include('ad-image', { ad })
*/
%>

<% if (ad) { %>

  <% if (ad.adType === 'image') { %>

    <div class="ad-image-slot my-3 text-center">
      <a
        href="<%= ad.linkUrl || '#' %>"
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="d-block"
      >
        <img
          src="<%= ad.imageUrl %>"
          alt="<%= ad.title || 'Advertisement' %>"
          class="img-fluid rounded shadow-sm"
          style="max-height:180px; object-fit:contain;"
        >
      </a>
    </div>

  <% } else if (ad.adType === 'html') { %>

    <div class="my-3 w-100">
      <%- ad.content || '' %>
    </div>

  <% } else if (ad.adType === 'script') { %>

    <!-- IMPORTANT: No flex wrapper so iframe can expand -->
    <div class="my-3 w-100">
      <%- ad.productEmbed || '' %>
    </div>

  <% } %>

<% } %>
