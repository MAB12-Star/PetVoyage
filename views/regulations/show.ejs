<% layout('layouts/boilerplate') %>

<!-- SEO Head -->
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Pet import/export rules for <%= regulations[0].originCountry.country %> to <%= regulations[0].destinationCountry.country %>.">
  <title>Pet Regulations - PetVoyage</title>
</head>

<!-- Hero Section -->
<div class="bg-light py-5 text-center border-bottom">
  <img src="/images/PetVoyageLogo.png" class="img-fluid rounded-top d-block mx-auto" alt="PetVoyage Logo" width="300" />
  <h1 class="fw-bold display-5">Travel Smarter with Pets</h1>
  <p class="fs-5 text-muted">Explore pet policies from <%= regulations[0].originCountry.country %> to <%= regulations[0].destinationCountry.country %>.</p>

 <!-- Navigation Strip -->
 <div class="mt-4">
    <!-- Desktop Layout (unchanged) -->
    <div class="d-none d-md-flex justify-content-center gap-3 flex-wrap desktop-icon-nav">
      <a href="/getCountryRegulationList"  class="btn btn-dark px-4 py-2 text-center">
        <i class="bi bi-globe-americas d-block fs-3"></i>
        <small>Country Policies</small>
      </a>
      <a href="/regulations/searchFlights" class="btn btn-outline-secondary px-4 py-2 text-center">
        <i class="bi bi-airplane d-block fs-3"></i>
        <small>Search Flights</small>
      </a>
      <a href="/regulations/airlineList" class="btn btn-outline-secondary px-4 py-2 text-center">
        <i class="bi bi-card-list d-block fs-3"></i>
        <small>Airline Policies</small>
      </a>
      <a href="/findAVet" class="btn btn-outline-secondary px-4 py-2 text-center">
        <i class="bi bi-hospital d-block fs-3"></i>
        <small>Find a Vet</small>
      </a>
      <a href="/blog" class="btn btn-outline-secondary px-4 py-2 text-center">
        <i class="bi bi-journal-text d-block fs-3"></i>
        <small>Blog</small>
      </a>
    </div>
  
       <!-- Mobile Layout -->
       <div class="d-flex d-md-none justify-content-between text-center mt-3 px-2">
        <div class="mobile-icon-group">
          <a href="/getCountryRegulationList"  class="square-icon btn btn btn-dark">
            <i class="bi bi-globe-americas fs-3"></i>
          </a>
          <small>Country</small>
        </div>
        <div class="mobile-icon-group">
          <a href="/regulations/searchFlights" class="square-icon btn btn-outline-secondary">
            <i class="bi bi-airplane fs-3"></i>
          </a>
          <small>Flights</small>
        </div>
        <div class="mobile-icon-group">
          <a href="/regulations/airlineList" class="square-icon btn btn-outline-secondary">
            <i class="bi bi-card-list fs-3"></i>
          </a>
          <small>Airlines</small>
        </div>
        <div class="mobile-icon-group">
          <a href="/findAVet" class="square-icon btn btn-outline-secondary">
            <i class="bi bi-hospital fs-3"></i>
          </a>
          <small>Vet</small>
        </div>
        <div class="mobile-icon-group">
          <a href="/blog" class="square-icon btn btn-outline-secondary">
            <i class="bi bi-journal-text fs-3"></i>
          </a>
          <small>Blog</small>
        </div>
      </div>
  </div>

 
</div>

 <!-- In-Page Section Navigation -->
 <div class="d-flex justify-content-center gap-2 flex-wrap mt-4">
    <a href="#vaccinations" class="btn btn-outline-primary">Vaccinations</a>
    <a href="#certifications" class="btn btn-outline-primary">Certifications</a>
    <a href="#microchip" class="btn btn-outline-primary">Microchip</a>
    <a href="#assistance" class="btn btn-outline-primary">Assistance Pets</a>
    <a href="#moreinfo" class="btn btn-outline-primary">More Info</a>
    <a href="#links" class="btn btn-outline-primary">Links</a>
  </div>
<!-- Regulation Sections -->
<div class="container my-5">
    <% regulations.forEach(regulation => { %>
        <div id="vaccinations" class="mb-5">
            <h3 class="text-primary">Vaccinations</h3>
            <div class="bg-light p-3 rounded border"><%- regulation.vaccinations %></div>
        </div>

        <div id="certifications" class="mb-5">
            <h3 class="text-primary">Certifications</h3>
            <div class="bg-light p-3 rounded border"><%- regulation.certifications %></div>
        </div>

        <div id="microchip" class="mb-5">
            <h3 class="text-primary">Microchip</h3>
            <div class="bg-light p-3 rounded border"><%- regulation.microchip %></div>
        </div>

        <div id="assistance" class="mb-5">
            <h3 class="text-primary">Assistance Pets</h3>
            <div class="bg-light p-3 rounded border"><%- regulation.assistancePet %></div>
        </div>

        <div id="moreinfo" class="mb-5">
            <h3 class="text-primary">More Info</h3>
            <div class="bg-light p-3 rounded border"><%- regulation.description %></div>
        </div>

        <div id="links" class="mb-5">
            <h3 class="text-primary">Links</h3>
            <div class="bg-light p-3 rounded border">
                <a href="<%= regulation.link %>" target="_blank"><%= regulation.link %></a>
            </div>
        </div>
    <% }) %>
</div>
