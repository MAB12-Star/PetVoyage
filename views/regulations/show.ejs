<% layout('layouts/boilerplate') %>

<!-- SEO Meta Tags -->
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="Comprehensive pet travel regulations from <%= regulations[0].originCountry.country %> to <%= regulations[0].destinationCountry.country %>. Learn about vaccinations, microchip requirements, certifications, and more.">
<meta name="keywords" content="pet travel regulations, traveling with pets, pet certifications, vaccinations, microchip requirements, pet travel links">
<meta name="author" content="Pet Voyage">
<meta name="robots" content="index, follow">

<!-- Open Graph Meta Tags -->
<meta property="og:title" content="Pet Travel Regulations - <%= regulations[0].originCountry.country %> to <%= regulations[0].destinationCountry.country %>">
<meta property="og:description" content="Comprehensive pet travel regulations from <%= regulations[0].originCountry.country %> to <%= regulations[0].destinationCountry.country %>. Find everything you need for your furry friend.">
<meta property="og:image" content="/images/pet-regulations-banner.jpg"> <!-- Replace with relevant image -->
<meta property="og:url" content="https://www.petvoyage.ai/regulations">
<meta property="og:type" content="website">

<!-- Twitter Card Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="Pet Travel Regulations - <%= regulations[0].originCountry.country %> to <%= regulations[0].destinationCountry.country %>">
<meta name="twitter:description" content="Comprehensive pet travel regulations from <%= regulations[0].originCountry.country %> to <%= regulations[0].destinationCountry.country %>. Find everything you need for your furry friend.">
<meta name="twitter:image" content="/images/pet-regulations-banner.jpg"> <!-- Replace with relevant image -->

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Alert Section -->
            <% if (regulations[0].destinationCountry.country === "United States" && regulations[0].petType.type === "Dog") { %>
                <div class="alert alert-danger text-center" role="alert">
                    <h2><strong>ALERT</strong></h2>
                    <p>
                        As of November 22, 2024, Mexico is considered to be affected with screwworm. All dogs (including U.S. origin dogs returning to the U.S. after traveling to Mexico) must meet APHIS requirements for screwworm freedom certification upon entry (re-entry). 
                        For more information, visit the <a href="https://www.aphis.usda.gov/pet-travel/another-country-to-us-import/dogs" target="_blank" class="text-danger fw-bold">APHIS Dog Import Website</a>.
                    </p>
                </div>
            <% } %>

            <!-- Regulations Header -->
            <div class="card border-primary shadow-lg p-3 mb-5 bg-white rounded">
                <div class="card-body text-center">
                    <h3 class="text-primary mb-4">
                        Pet Regulations for <%= regulations[0].originCountry.country %> to <%= regulations[0].destinationCountry.country %> - <%= regulations[0].petType.type %>
                    </h3>
                    <% if (regulations[0].petType.type === "Cat") { %>
                        <img class="img-fluid rounded mb-3" src="/images/Cat3.png" alt="Cat traveling regulations" style="max-width: 150px;">
                    <% } else if (regulations[0].petType.type === "Dog") { %>
                        <img class="img-fluid rounded mb-3" src="/images/Dog3.png" alt="Dog traveling regulations" style="max-width: 150px;">
                    <% } else { %>
                        <img class="img-fluid rounded mb-3" src="/images/Bird2.png" alt="Other pet traveling regulations" style="max-width: 150px;">
                    <% } %>
                    <p class="lead text-secondary">
                        You're looking to travel to <strong><%= regulations[0].destinationCountry.country %></strong> with your precious <strong><%= regulations[0].petType.type %></strong>! Below, you'll find the necessary information to make your journey smooth and stress-free. Remember to also check airline-specific requirements.
                    </p>
                </div>
            </div>

            <!-- Accordion Section -->
            <div class="accordion" id="accordionExample">
                <% regulations.forEach(regulation => { %>
                    <!-- Vaccination Requirements -->
                    <% if (regulations[0].petType.type !== "Other") { %>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseVaccinations" aria-expanded="false" aria-controls="collapseVaccinations">
                                    Vaccination Requirements
                                </button>
                            </h2>
                            <div id="collapseVaccinations" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <%- regulation.vaccinations %>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <!-- Certification Requirements -->
                    <% if (regulations[0].petType.type !== "Other") { %>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCertifications" aria-expanded="false" aria-controls="collapseCertifications">
                                    Certification Requirements
                                </button>
                            </h2>
                            <div id="collapseCertifications" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <%- regulation.certifications %>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <!-- Microchip Requirements -->
                    <% if (regulations[0].petType.type !== "Other") { %>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMicrochip" aria-expanded="false" aria-controls="collapseMicrochip">
                                    Microchip Requirements
                                </button>
                            </h2>
                            <div id="collapseMicrochip" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <%- regulation.microchip %>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <!-- More Information -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMoreInfo" aria-expanded="false" aria-controls="collapseMoreInfo">
                                More Information
                            </button>
                        </h2>
                        <div id="collapseMoreInfo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <%- regulation.description %>
                            </div>
                        </div>
                    </div>

                    <!-- Links -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLinks" aria-expanded="false" aria-controls="collapseLinks">
                                Helpful Links
                            </button>
                        </h2>
                        <div id="collapseLinks" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <a href="<%= regulation.link %>" target="_blank" class="text-primary"><%= regulation.link %></a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Navigation Buttons -->
            <div class="d-flex justify-content-center mt-4 gap-3">
                <button type="button" class="btn btn-outline-secondary" onclick="location.href='/regulations/newSearch'">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
                <button type="button" class="btn btn-outline-secondary" onclick="location.href='/'">
                    <i class="bi bi-house-door"></i> Home
                </button>
                <button type="button" class="btn btn-outline-secondary" onclick="location.href='/regulations/searchFlights'">
                    <i class="bi bi-search"></i> Search Pet Flights
                </button>
            </div>
        </div>
    </div>
</div>
