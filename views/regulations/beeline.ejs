            <td><input type="text" /><span class="search-icon">üîç</span></td>
            <td><input type="text" /><span class="search-icon">üîç</span></td>
            <td><input type="text" /><span class="search-icon">üîç</span></td>
            <td><input type="text" /></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="button-group">
      <button class="save-btn">Save</button>
      <button class="add-btn">+ Add New Unit</button>
    </div>
  </div>

</body>
</html>
