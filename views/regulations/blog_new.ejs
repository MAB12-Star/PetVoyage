<% layout('layouts/boilerplate') %>

<div class="container py-4">
  <h1 class="mb-3">Write your pet travel story</h1>

  <form id="story-form" method="post" action="/blog/new" enctype="multipart/form-data" class="card p-3 shadow-sm">
    <!-- Title -->
    <div class="mb-3">
      <label class="form-label">Title <span class="text-danger">*</span></label>
      <input name="title" class="form-control" required maxlength="140" placeholder="Catchy title for your flight story">
      <div class="form-text">Max 140 characters.</div>
    </div>

    <!-- Quick metadata (all plain inputs) -->
    <div class="row g-3">
      <div class="col-md-4">
        <label class="form-label">Airline (optional)</label>
        <!-- Text input with native suggestions -->
        <input
          name="airline"
          id="airline-input"
          class="form-control"
          placeholder="e.g., Volaris"
          list="airlineList"
          autocomplete="off">

        <!-- Suggestions (rendered only if airlines provided) -->
        <datalist id="airlineList">
          <% (airlines || []).forEach(a => { %>
            <option value="<%= a.name %>" data-slug="<%= a.slug %>"></option>
          <% }) %>
        </datalist>

        <!-- Hidden slug captured if user picks a matching airline -->
        <input type="hidden" name="airlineSlug" id="airline-slug">
        <div class="form-text">Start typing to see suggestions, or enter a custom airline.</div>
      </div>

      <div class="col-md-4">
        <label class="form-label">From (optional)</label>
        <input name="routeFrom" class="form-control" placeholder="City / Airport (e.g., SFO)">
      </div>
      <div class="col-md-4">
        <label class="form-label">To (optional)</label>
        <input name="routeTo" class="form-control" placeholder="City / Airport (e.g., CDMX)">
      </div>
    </div>

    <div class="row g-3 mt-1">
  <div class="col-md-4">
    <label class="form-label">Destination country (optional)</label>
    <input name="country" class="form-control" placeholder="e.g., Mexico">
  </div>

  <div class="col-md-4">
    <label class="form-label">Pets traveling (optional)</label>

    <!-- ‚úÖ Multi-select via checkboxes -->
    <div class="d-flex flex-wrap gap-2">
      <label class="btn btn-outline-secondary btn-sm">
        <input class="form-check-input me-1" type="checkbox" name="petTypes" value="dog"> dog
      </label>
      <label class="btn btn-outline-secondary btn-sm">
        <input class="form-check-input me-1" type="checkbox" name="petTypes" value="cat"> cat
      </label>
      <label class="btn btn-outline-secondary btn-sm">
        <input class="form-check-input me-1" type="checkbox" name="petTypes" value="bird"> bird
      </label>
      <label class="btn btn-outline-secondary btn-sm">
        <input class="form-check-input me-1" type="checkbox" name="petTypes" value="reptile"> reptile
      </label>
      <label class="btn btn-outline-secondary btn-sm">
        <input class="form-check-input me-1" type="checkbox" name="petTypes" value="other" id="pv-pet-other"> other
      </label>
    </div>

    <div class="form-text">Select all that apply.</div>
  </div>

  <div class="col-md-4">
    <label class="form-label">If ‚Äúother‚Äù, specify (optional)</label>
    <input
      name="petOther"
      id="pv-pet-other-text"
      class="form-control"
      placeholder="e.g., rabbit, hamster"
      disabled>
    <div class="form-text">Enabled only if you select ‚Äúother‚Äù.</div>
  </div>
</div>

<script>
  (function(){
    const otherCb = document.getElementById('pv-pet-other');
    const otherTxt = document.getElementById('pv-pet-other-text');
    if (!otherCb || !otherTxt) return;

    function sync(){
      otherTxt.disabled = !otherCb.checked;
      if (!otherCb.checked) otherTxt.value = '';
    }
    otherCb.addEventListener('change', sync);
    sync();
  })();
</script>


