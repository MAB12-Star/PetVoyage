<% layout('layouts/boilerplate') %>

<div class="container py-4">
  <h1 class="mb-3">Edit story</h1>

  <form id="story-edit-form"
        method="post"
        action="/blog/<%= story._id %>"
        enctype="multipart/form-data"
        class="card p-3 shadow-sm">

    <!-- Title -->
    <div class="mb-3">
      <label class="form-label">Title <span class="text-danger">*</span></label>
      <input name="title" class="form-control" required maxlength="140"
             value="<%= story.title %>">
      <div class="form-text">Max 140 characters.</div>
    </div>

    <!-- Quick metadata -->
    <%
      const __route = (story.route || '');
      const __split = __route.includes('→') ? __route.split('→') : [];
      const __from  = (__split[0] || '').trim();
      const __to    = (__split[1] || '').trim();

      // ✅ NEW: normalize pet types for checkbox UI
      const __petTypes = Array.isArray(story.petTypes)
        ? story.petTypes.map(t => String(t).toLowerCase().trim()).filter(Boolean)
        : (typeof story.petTypes === 'string'
            ? story.petTypes.split(',').map(t=>t.toLowerCase().trim()).filter(Boolean)
            : []);

      const __has = (k) => __petTypes.includes(String(k).toLowerCase());
      const __petOther = (story.petOther || '').trim();
    %>

    <div class="row g-3">
      <div class="col-md-4">
        <label class="form-label">Airline (optional)</label>

        <!-- Text input with native suggestions -->
        <input name="airline"
               id="airline-input"
               class="form-control"
               value="<%= story.airline || '' %>"
               placeholder="e.g., Volaris"
               list="airlineList"
               autocomplete="off">

        <!-- Suggestions -->
        <datalist id="airlineList">
          <% ((airlines || locals.airlines) || []).forEach(a => { %>
            <option value="<%= a.name %>" data-slug="<%= a.slug %>"></option>
          <% }) %>
        </datalist>

        <!-- Hidden slug captured if user picks a matching airline -->
        <input type="hidden" name="airlineSlug" id="airline-slug" value="<%= story.airlineSlug || '' %>">
        <div class="form-text">Start typing to see suggestions, or enter a custom airline.</div>
      </div>

      <div class="col-md-4">
        <label class="form-label">From (optional)</label>
        <input name="routeFrom" class="form-control" value="<%= __from %>" placeholder="City / Airport (e.g., SFO)">
      </div>

      <div class="col-md-4">
        <label class="form-label">To (optional)</label>
        <input name="routeTo" class="form-control" value="<%= __to %>" placeholder="City / Airport (e.g., CDMX)">
      </div>
    </div>

    <div class="row g-3 mt-1">
      <div class="col-md-4">
        <label class="form-label">Destination country (optional)</label>
        <input name="country" class="form-control" value="<%= story.country || '' %>" placeholder="e.g., Mexico">
      </div>

      <!-- ✅ NEW: Multi-select pet types (checkboxes) -->
      <div class="col-md-8">
        <label class="form-label">Pet types (select all that apply)</label>

        <div class="d-flex flex-wrap gap-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="pt-dog" name="petTypes" value="dog" <%= __has('dog') ? 'checked' : '' %>>
            <label class="form-check-label" for="pt-dog">dog</label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="pt-cat" name="petTypes" value="cat" <%= __has('cat') ? 'checked' : '' %>>
            <label class="form-check-label" for="pt-cat">cat</label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="pt-bird" name="petTypes" value="bird" <%= __has('bird') ? 'checked' : '' %>>
            <label class="form-check-label" for="pt-bird">bird</label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="pt-reptile" name="petTypes" value="reptile" <%= __has('reptile') ? 'checked' : '' %>>
            <label class="form-check-label" for="pt-reptile">reptile</label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="pt-other" name="petTypes" value="other" <%= __has('other') ? 'checked' : '' %>>
            <label class="form-check-label" for="pt-other">other</label>
          </div>
        </div>

        <!-- ✅ NEW: Only meaningful if "other" is checked -->
        <div class="mt-2">
          <label class="form-label mb-1" for="petOther">If “other”, specify (optional)</label>
          <input id="petOther" name="petOther" class="form-control"
                 value="<%= __petOther %>"
                 placeholder="e.g., rabbit, guinea pig">
          <div class="form-text">Only saved if “other” is selected.</div>
        </div>

        <!-- ✅ legacy hidden field (optional): keep your existing schema happy -->
        <input type="hidden" name="petType" value="<%= story.petType || '' %>">
      </div>
    </div>

    <div class="mb-3 mt-3">
      <label class="form-label">Short summary (optional)</label>
      <input name="summary" class="form-control" maxlength="300"
             value="<%= story.summary || '' %>"
             placeholder="1–2 lines (what worked, surprises, tips)">
      <div class="form-text">Max 300 characters.</div>
    </div>

    <!-- === Simple Rich Text Editor (same as create) === -->
    <style>
      .rte-toolbar{ gap:.4rem; }
      .rte-toolbar .btn{ --bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size:.85rem; }
      #pv-editor{ min-height: 260px; line-height: 1.6; }
      .pv-limit-note{ font-size:.85rem; color:#6c757d }
    </style>

    <div class="mb-2">
      <label class="form-label d-flex align-items-center justify-content-between">
        <span>Your Story <span class="text-danger">*</span></span>
        <span class="pv-limit-note">Basic formatting supported (Bold, lists, H2/H3, links)</span>
      </label>

      <!-- Toolbar -->
      <div class="btn-toolbar rte-toolbar mb-2" role="toolbar" aria-label="Formatting">
        <div class="btn-group btn-group-sm" role="group" aria-label="Emphasis">
          <button class="btn btn-outline-secondary" type="button" data-cmd="bold" title="Bold"><strong>B</strong></button>
          <button class="btn btn-outline-secondary" type="button" data-cmd="underline" title="Underline"><u>U</u></button>
          <button class="btn btn-outline-secondary" type="button" data-cmd="italic" title="Italic"><em>I</em></button>
        </div>
        <div class="btn-group btn-group-sm" role="group" aria-label="Headings">
          <button class="btn btn-outline-secondary" type="button" data-block="p" title="Paragraph">P</button>
          <button class="btn btn-outline-secondary" type="button" data-block="h2" title="Heading 2">H2</button>
          <button class="btn btn-outline-secondary" type="button" data-block="h3" title="Heading 3">H3</button>
        </div>
        <div class="btn-group btn-group-sm" role="group" aria-label="Lists">
          <button class="btn btn-outline-secondary" type="button" data-cmd="insertUnorderedList" title="Bulleted list">• List</button>
          <button class="btn btn-outline-secondary" type="button" data-cmd="insertOrderedList" title="Numbered list">1. List</button>
        </div>
        <div class="btn-group btn-group-sm" role="group" aria-label="Link">
          <button class="btn btn-outline-secondary" type="button" id="pv-insert-link" title="Insert link">Link</button>
        </div>
        <div class="btn-group btn-group-sm" role="group" aria-label="Clear">
          <button class="btn btn-outline-secondary" type="button" id="pv-clear-format" title="Clear formatting">Clear</button>
        </div>
      </div>

      <!-- Editable area -->
      <div id="pv-editor" class="form-control" contenteditable="true"
           aria-label="Story editor"><%- story.body || '' %></div>

      <!-- Hidden input that actually submits -->
      <input type="hidden" name="body" id="pv-editor-output" />

      <div class="d-flex justify-content-between">
        <div class="form-text">You can paste plain text; images should be added via the picker below.</div>
        <div class="form-text"><span id="pv-wordcount">0</span> words</div>
      </div>
    </div>

    <!-- Existing photos (with delete checkboxes) -->
    <% if (story.photos && story.photos.length) { %>
      <div class="mb-3">
        <label class="form-label">Current photos</label>

        <div class="d-flex flex-wrap gap-3">
          <% story.photos.forEach(function(p, idx){ %>
            <div class="card border-0 shadow-sm" style="width: 170px;">
              <a href="<%= p.url %>" target="_blank" rel="noopener">
                <img src="<%= p.thumbUrl || p.url %>" class="rounded-3 border" style="width:170px;height:auto" alt="">
              </a>
              <div class="card-body p-2">
                <div class="form-check">
                  <input class="form-check-input"
                         type="checkbox"
                         id="del-photo-<%= idx %>"
                         name="deletePhotos"
                         value="<%= p.url %>">
                  <label class="form-check-label small" for="del-photo-<%= idx %>">
                    Remove
                  </label>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

        <div class="form-text">Checked photos will be removed when you save.</div>
      </div>
    <% } %>

    <!-- Add more photos -->
    <div class="mb-3">
      <label class="form-label">Add more photos (optional)</label>
      <input type="file" id="pv-photos" name="photos" class="form-control" accept="image/*" multiple>
      <div class="form-text">JPG/PNG/WebP/GIF, up to 8MB each (max 6 per upload).</div>
      <div id="pv-photo-previews" class="d-flex flex-wrap gap-2 mt-2"></div>
    </div>

    <!-- Actions -->
    <div class="d-flex gap-2">
      <button class="btn btn-primary" type="submit">Save changes</button>
      <a class="btn btn-outline-secondary" href="/blog/<%= story.slug || story._id %>">Cancel</a>
    </div>
  </form>
</div>

<script>
  (function(){
    const input = document.getElementById('airline-input');
    const slugField = document.getElementById('airline-slug');
    const dl = document.getElementById('airlineList');

    function syncSlug(){
      const val = (input.value || '').trim().toLowerCase();
      let matchedSlug = '';
      if (dl) {
        Array.from(dl.options || []).some(opt => {
          if ((opt.value || '').toLowerCase() === val) {
            matchedSlug = opt.getAttribute('data-slug') || '';
            return true;
          }
          return false;
        });
      }
      slugField.value = matchedSlug;
    }

    input.addEventListener('change', syncSlug);
    input.addEventListener('blur', syncSlug);
    input.addEventListener('input', () => { if (!input.value) slugField.value = ''; });

    syncSlug();
  })();
</script>

<script>
(function(){
  const editor   = document.getElementById('pv-editor');
  const output   = document.getElementById('pv-editor-output');
  const form     = document.getElementById('story-edit-form');
  const photos   = document.getElementById('pv-photos');
  const previews = document.getElementById('pv-photo-previews');
  const wcEl     = document.getElementById('pv-wordcount');
  const otherCb  = document.getElementById('pt-other');
  const otherInp = document.getElementById('petOther');

  function exec(cmd, val=null){ document.execCommand(cmd, false, val); editor.focus(); }

  document.querySelectorAll('[data-cmd]').forEach(btn => {
    btn.addEventListener('click', () => exec(btn.getAttribute('data-cmd')));
  });
  document.querySelectorAll('[data-block]').forEach(btn => {
    btn.addEventListener('click', () => {
      const tag = btn.getAttribute('data-block');
      exec('formatBlock', tag === 'p' ? 'p' : tag);
    });
  });

  document.getElementById('pv-insert-link').addEventListener('click', () => {
    const url = prompt('Enter URL (https://...)');
    if (!url) return;
    exec('createLink', url);
    editor.querySelectorAll('a').forEach(a => {
      a.setAttribute('target','_blank');
      a.setAttribute('rel','noopener');
    });
  });

  document.getElementById('pv-clear-format').addEventListener('click', () => exec('removeFormat'));

  editor.addEventListener('paste', (e) => {
    e.preventDefault();
    const text = (e.clipboardData || window.clipboardData).getData('text');
    if (!text) return;
    const html = text.split(/\n{2,}/).map(p => '<p>' + p.replace(/\n/g,'<br>') + '</p>').join('');
    document.execCommand('insertHTML', false, html);
  });

  function updateWordCount(){
    const text = editor.innerText || '';
    const words = (text.trim().match(/\S+/g) || []).length;
    wcEl.textContent = words;
  }
  editor.addEventListener('input', updateWordCount);
  updateWordCount();

  if (photos) {
    photos.addEventListener('change', () => {
      previews.innerHTML = '';
      const files = Array.from(photos.files || []);
      if (files.length > 6) { alert('Please upload up to 6 images.'); photos.value = ''; return; }
      const tooBig = files.find(f => f.size > 8 * 1024 * 1024);
      if (tooBig) { alert('Each image must be 8MB or smaller.'); photos.value = ''; return; }

      files.forEach(f => {
        const url = URL.createObjectURL(f);
        const img = document.createElement('img');
        img.src = url;
        img.alt = f.name;
        img.style.width = '150px';
        img.style.height = 'auto';
        img.className = 'rounded border';
        previews.appendChild(img);
      });
    });
  }

  // Toggle other field enabled state
  function syncOther(){
    if (!otherCb || !otherInp) return;
    const on = !!otherCb.checked;
    otherInp.disabled = !on;
    if (!on) otherInp.value = '';
  }
  if (otherCb && otherInp) {
    otherCb.addEventListener('change', syncOther);
    syncOther();
  }

  form.addEventListener('submit', (e) => {
    const clone = editor.cloneNode(true);
    clone.querySelectorAll('script,style').forEach(n => n.remove());
    clone.querySelectorAll('*').forEach(el => {
      [...el.attributes].forEach(att => {
        if (/^on/i.test(att.name)) el.removeAttribute(att.name);
      });
    });

    output.value = clone.innerHTML.trim();

    if (!output.value || !output.value.replace(/<[^>]*>/g,'').trim()) {
      e.preventDefault();
      alert('Please write your story before saving.');
      editor.scrollIntoView({behavior:'smooth', block:'center'});
      editor.focus();
      return false;
    }
  });
})();
</script>
