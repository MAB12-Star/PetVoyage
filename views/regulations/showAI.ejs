<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-secondary shadow-lg p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <h3 class="text-center text-primary mb-4">Pet Regulations for <%= country %> - <%= petType %></h3>

                    <!-- Display the OpenAI-generated regulations -->
                    <div class="card mb-3 border-secondary shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <p><strong>Description:</strong></p>
                                    <!-- Render OpenAI-generated text here -->
                                    <p><%- Description %></p>
                                </div>
                                <!-- Heart button to save to profile (optional) -->
                                <form action="/favorites/saveToProfile" method="POST" class="ms-auto">
                                    <!-- Include hidden inputs if saving functionality is needed -->
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-heart"></i> Save
                                    </button>
                                </form>

                                <form action="/favorites/saveToProfile" method="POST">
                                    <input type="hidden" name="regulationContent" value="<%= regulations %>">
                                    <input type="hidden" name="country" value="<%= country %>">
                                    <input type="hidden" name="petType" value="<%= petType %>">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-heart"></i> Save to Profile
                                    </button>
                                </form>
                                
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Links -->
            <div class="d-flex justify-content-between mt-3">
                <a href="/regulations/newSearch" class="btn btn-secondary">Back To Search</a>
                <a href="/" class="btn btn-secondary">Back To Home</a>
                <a href="/regulations/searchFlights" class="btn btn-primary">Search Flights for Pets</a>
            </div>
        </div>
    </div>
</div>
